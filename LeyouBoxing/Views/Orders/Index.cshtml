@model IEnumerable<LeyouBoxing.Model.Order>

@{
    ViewData["Title"] = "Index";
}

<h2>订单列表</h2>

<p>
    <a asp-action="Create" class="btn btn-default">创建订单</a> 
    <a asp-action="InputExcel"  class="btn btn-default">导入订单</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.JcNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Style)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InputDate)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.GenerateData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JcNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Style)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InputDate)
            </td>
            <td>@if (item.GenerateData == true)
                {
                   <s>是</s>
            }
            else
            {
                <s>否</s>
            }

            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">删除</a> |
                <a asp-action="GenerateData" asp-route-id="@item.Id">生成数据</a> |
                <a asp-action="Index" asp-controller="OrderItems" asp-route-id="@item.Id">详细</a> |
                <a asp-action="GetOrderRow" asp-route-id="@item.Id">行列表</a> |
                <a asp-action="Index" asp-controller="OrderBoxings" asp-route-id="@item.Id">汇总</a>
            </td>
        </tr>
}
    </tbody>
</table>
